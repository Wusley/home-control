	<head>
		<meta charset="UTF-8">
		<title> <%= title %> </title>

		<script src="/socket.io/socket.io.js"></script>

		<script>
			
			var socket = io.connect( 'http://homecontrol-thwess.rhcloud.com' );

			function on() {
				socket.emit( 'on', {} );
			};


			function off() {
  				socket.emit( 'off', {} );
			};
			
		</script>

		<style>
			div {
				padding: 20px;
				width: 100%;
				height: 200px;
				background: red;
				border-radius: 10px;
				-webkit-box-sizing: border-box;
				box-sizing: border-box;
			}

			div:first-child {
				background: green;
				margin-bottom: 10px;
			}
		</style>
	</head>

	<body>

		<div onclick="javascript:on();"></div>
		<div onclick="javascript:off();"></div>

	</body>

	
</html>